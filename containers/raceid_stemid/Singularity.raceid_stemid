    apt-get install -y libcgal-dev libglu1-mesa-dev libglu1-mesa-dev
    R -e 'devtools::install_cran("FateID")'
    R -e 'devtools::install_cran("RaceID")'

%files
    . /code

%runscript
    exec /code/run.sh
